@import "iconos.styl"


body
	background-color #fafbfb
	border none

	header	
		margin 0 auto
		width 85%
		padding 0

		figure a
			display block
			width 300px
			height 60px
			text-decoration none
			margin 45px 0 17px 20px
			padding 0

			img
				display block
				width 255px
				margin 0
				padding 0

		div
			width 380px
			height 60px
			padding 0
			margin -80px 0 17px 0
			float right 

			p, figure, input,button
				display inline-block

			p
				font-family open sans
				font-weight 400
				font-size 14px
				color #0071b5

			figure
				height 20px
				width 30px

			input
				width 150px
				background-color #dfdfdf
				color #4d4d4d
				font-family open sans
				font-size 0.75em
				border none
				padding 3px
				margin 0

			button
				border none
				margin 0
				position relative
				top 2px
				left -5px
				padding 3px
				height 23px
				width 25px
				background-color #0071b5

				span
					font-size 1em
					color white

		nav
			width 100%
			height 27px
			padding 0
			border-bottom solid #c5c5c5 1px
			position relative
			z-index 9999


			ul
				padding 0
				margin 0
				display inline-block

				li
					display inline-block
					border-right solid 1px #acacac
					border-left solid 1px white
					text-decoration none
					width 189.5px
					height 28px
					padding 0
					margin 0 -2px
					vertical-align top
					cursor pointer
					
					a
						margin 0
						padding 0
						width 100%
						height 100%
						text-decoration none

						p, img
							display inline-block
							vertical-align middle
							margin 7px 0 

						p
							margin 3px 0 0 13px
							font-family open sans
							font-size 0.9em
							color #4d4d4d

						img
							float right
							margin 8px 20px 0 0
							width 13px

						.icoFlechaSelect1, .icoFlechaSelect2, .icoFlechaSelect3, .icoFlechaSelect4
							position relative
							left 33px
							display none


					ul 
						width 200px
						display none
						padding 10px
						margin 0
						background-color #0071b5
						position relative
						top 6px
						z-index 8888

						li
							display block
							width 195px
							margin 0
							border-left none
							border-right none
							border-bottom-style dotted
							border-color white
							border-width 1px
							padding 3px 0 2px 0
							height 22px

							a
								text-decoration none
								font-family open sans
								color white
								font-size 0.8em
								margin 0 0 0 5px
								padding 0
								vertical-align middle

							a:hover
								color #f4a93b

						.botonesSx
							border none

				.subnav
					margin-left -30px









	footer
		width 100%
		margin 10px 0 0 0

		.foot1
			width 100%
			background-color #ebebeb
			padding 20px 0 50px 0

			ul 
				text-decoration none
				width 1150px
				margin 0 auto
				padding 0
				
				li
					display inline-block
					text-decoration none
					width 186px
					margin 10px 0 0 0
					padding 0
					vertical-align top

					a
						text-decoration none
						font-family open sans
						font-weight bold
						font-size 0.8em
						color #4d4d4d
						margin 0
						padding 0

					ul
						border none
						margin 0
						padding 0
						width 200px

						.botonMarcas
							display block
							border none
							width 170px
							margin 1px 0
							padding 0

							a
								font-weight normal
								text-decoration none

							a:hover
								color #0071b5
								border-bottom solid 1px #0071b5	

						li 
							display block
							text-decoration none
							a 
								text-decoration none
								border none

								img
									width 100px
									margin-bottom 5px

		.foot2
			width 100%
			
			.gridFoot2 
				text-decoration none
				width 1150px
				margin 0 auto
				padding 10px 0


				.pieGeo, .gridRedes
					width 400px
					vertical-align middle
					display inline-block

					p, img
						display inline-block
						vertical-align middle

					p
						font-family open sans
						font-size 0.7em
						color #4d4d4d
						letter-spacing 1px
						margin-right 20px				

				.gridRedes
					position relative
					left 400px
					margin 0
					padding 0
					height 100px

					p
						vertical-align middle
						position relative
						top 28px

					ul li
						display inline-block
						text-decoration none
						margin 0
						position relative
						top -20px
						left 100px

						figure
							display inline-block
							width 45px

							.icoFb, .icoT, .icoL, .icoY
								width 25px
								margin 0 5px
								padding 0
						

							.icoFbcolor, .icoTcolor, .icoLcolor, .icoYcolor
								width 25px
								display none

							.icoFbcolor
								position absolute
								top 0px
								left 5px

							.icoTcolor
								position absolute
								top 0px
								left 5px

							.icoLcolor
								position absolute
								top 0px
								left 5px

							.icoYcolor
								position absolute
								top 0px
								left 5px

				.pieGeo
					img
						width 130px

		.foot3
			width 100%
			background-color #929292
			margin 0
			padding 10px 0

			.gridFoot3
				text-decoration none
				width 380px
				margin 0 auto
				padding 5px 0

				img
					margin-top 5px
					width 350px